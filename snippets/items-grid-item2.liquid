  <div
    class="grid__item grid-product nohid {{ grid_item_width }}{% if settings.product_hover_details %} grid-product__hover-details{% endif %}"
    data-aos
    data-product-grid
    data-id="{{ product.id }}">
    <div class="grid-product__content">


      {%- assign fixed_aspect_ratio = false -%}
      {% unless settings.product_grid_image_size == 'natural' %}
        {%- assign fixed_aspect_ratio = true -%}
      {% endunless %}

      {%- assign preview_image = block.settings.background_image -%}
      {%- if force_jpg -%}
        {%- assign img_url = block.settings.background_image | img_url: '1x1', format: 'jpg' | replace: '_1x1.', '_{width}x.' -%}
      {%- else -%}
        {%- assign img_url = block.settings.background_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
      {%- endif -%}



      {%- assign slider_image_padding = '100%' -%}

      <a
        href="{{ block.settings.link }}"
        class="grid-product__link{% if sold_out %} grid-product__link--disabled{% endif %} {% if enable_quick_shop %} js-no-transition{% endif %}"
        data-product-id="{{ product.id }}"
        data-url="{{ block.settings.link }}">

        <div class="image-quick">
          <div
            class="product-slider"
            data-image-count="{{ product.media.size }}"
            data-id="{{ product.id }}">
            <div class="product-slide">
              <div class="image-wrap">
                {%- assign slider_image_padding = 100 | divided_by: block.settings.background_image.aspect_ratio | append: '%' -%}
                <div class="image-wrap" style="height: 0; padding-bottom: {{ slider_image_padding }};">
                  <img
                    data-swift-lazy="1"
                    loading="lazy"
                    class="grid-product__image lazyload"
                    data-src="{{ img_url }}"
                    data-widths="[750, 900, 1080]"
                    data-aspectratio="{{ block.settings.background_image.aspect_ratio }}"
                    data-sizes="auto"
                    alt="{{ block.settings.background_image.alt | escape }}">
                  <noscript>
                    <img
                      data-swift-lazy="1"
                      loading="lazy"
                      class="grid-product__image lazyloaded"
                      src="{{ block.settings.background_image | img_url: '400x' }}"
                      alt="{{ block.settings.background_image.alt | escape }}">
                  </noscript>
                </div>

              </div>
            </div>
          </div>


          <a
            class="Custom_Quick_View grid-product__link quick-product__btn js-screen-open-product-{{ product.id }} js-no-transition"
            data-product-id="{{forloop.index}}"
            data-url="{{ block.settings.link }}">
            VIEW
          </a>

        </div>



      </a>
      <div class="grid-product__meta __width100">
        <div class="grid-product__title" style="margin-top:30px">{{ block.settings.title }}</div>
        <div
          class="loox-rating"
          data-id="6701376602296"
          data-rating="4.9"
          data-raters="945"
          data-pattern="  [count]"
          title="4.9 rating (945 votes)"
          aria-label="4.9 rating (945 votes)"
          data-rating-upgraded="1">

          <p style="margin-top:10px">
            {{ block.settings.star_num }}</p>
        </div>
      </div>
    </div>

  </div>