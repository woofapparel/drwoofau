{%- assign header_font = settings.type_header_font_family -%}
{%- assign base_font = settings.type_base_font_family -%}
{%- assign base_font_bold = base_font | font_modify: 'weight', 'bolder' -%}
{%- assign base_font_italic = base_font | font_modify: 'style', 'italic' -%}
{%- assign base_font_bold_italic = base_font_bold | font_modify: 'style', 'italic' -%}

<style>
  {{ header_font | font_face: font_display: 'block' }}
  {{ base_font | font_face: font_display: 'block' }}

  {{ base_font_bold | font_face }}
  {{ base_font_italic | font_face }}
  {{ base_font_bold_italic | font_face }}


  @font-face {
    font-family: "Futura BdCn BT";
    src: url({{ "Futura_BdCn_BT.woff" | file_url }}) format("woff");
  }

  @font-face {
    font-family: "Futura XBlk BT";
    src: url({{ "Futura_XBlk_BT.ttf" | file_url }}) format("TrueType");
  }

  @font-face {
    font-family: "Futura MdCn BT";
    src: url({{ "Futura_MdCn_BT.ttf" | file_url }}) format("TrueType");
  }

  body,
  input,
  textarea,
  button,
  select {
    -webkit-font-smoothing: antialiased;
    -webkit-text-size-adjust: 100%;
    text-rendering: optimizeSpeed;
    font-family: {{ settings.type_base_font_family.family }}, {{ settings.type_base_font_family.fallback_families }};
    font-size: {{ settings.type_base_size | times: 0.85 }}px;
    font-weight: {{ settings.type_base_font_family.weight }};
    font-style: {{ settings.type_base_font_family.style }};
    letter-spacing: {{ settings.type_base_spacing | default: "50" | divided_by: 1000.00 }}em;
    line-height: {{ settings.type_base_line_height | default: 1.4 }};
  }

  @media only screen and (min-width: 769px) {
    body,
    input,
    textarea,
    button,
    select {
      font-size: {{ settings.type_base_size }}px;
    }
  }

  .page-container {
    display: none;
  }

  h1, .h1,
  h3, .h3,
  h4, .h4,
  h5, .h5,
  h6, .h6,
  .section-header__title,
  .spr-header-title.spr-header-title {
    font-family: {{ settings.type_header_font_family.family }}, {{ settings.type_header_font_family.fallback_families }};
    font-weight: {{ settings.type_header_font_family.weight }};
    font-style: {{ settings.type_header_font_family.style }};
    letter-spacing: {{ settings.type_header_spacing | default: "25" | divided_by: 1000.00 }}em;
    line-height: {{ settings.type_header_line_height | default: 1.4 }};
    word-break: break-word;

    {% if settings.type_header_capitalize %}
      text-transform: uppercase;
    {% endif %}
  }

  h2, .h2 {
    font-family: {{ settings.type_base_font_family.family }}, {{ settings.type_base_font_family.fallback_families }};
    font-weight: {{ settings.type_base_font_family.weight }};
    letter-spacing: {{ settings.type_base_spacing | default: "50" | divided_by: 1000.00 }}em;
    line-height: {{ settings.type_base_line_height | default: 1.4 }};
  }

  {% comment %}
    Splash screen logo and animation
  {% endcomment %}
  @keyframes pulse-fade {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }

  .splash-screen {
    box-sizing: border-box;
    display: flex;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    align-items: center;
    justify-content: center;
    z-index: 10001;
    background-color: {{ settings.color_body_bg | default: '#fff' }};
  }

  .splash-screen__loader {
    max-width: {{ settings.mobile_loader_width }}px;
  }

  @media only screen and (min-width: 769px) {
    .splash-screen__loader {
      max-width: {{ settings.desktop_loader_width }}px;
    }
  }

  .splash-screen img {
    display: block;
    max-width: 100%;
    border: 0 none;
    animation: pulse-fade 0.4s infinite linear;
  }

  .loader-text {
    letter-spacing: 0.2em;
    font-size: 1.5em;
    text-transform: uppercase;
    animation: pulse-fade 0.4s infinite linear;
  }

  .loader-logo {
    display: none;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    align-items: center;
    justify-content: center;
    background-color: {{ settings.color_body_bg }};
    z-index: 6000;
  }

  .loader-logo__img {
    display: block;
  }

  .transition-body {
    opacity: 0;
  }

  .btn--loading span:after {
    content: "{{ 'general.accessibility.loading' | t }}";
  }
</style>
