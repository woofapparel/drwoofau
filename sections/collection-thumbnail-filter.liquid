      }
      .collection-filter__wrapper{
        padding-bottom: 0;
      }
      .thumbnail-filter{
        margin-bottom:0 !important;
        padding-bottom:0 !important;
      }
    }
    {% unless section.settings.title_enable %}
      .flexer .duo{
        width:100% !important;
        flex: 0 0 100% !important;
        display:flex;
        flex-wrap:wrap;
        justify-content: center;
      }
      .flexer .duo,
