{% schema %}
  {
    "name": "Thumbnail Slider",
    "settings": [
      {
        "type": "checkbox",
        "id": "title_enable",
        "label": "Enable title combinations"
      }
    ],
    "blocks": [
      {
        "type": "Image",
        "name": "Thumbnail Collection",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_thumbnail",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "collection_title",
            "label": "Collection Title"
          },
          {
          "id": "linkurl",
          "type": "url",
          "label": "URL link"
           }
        ]
      }
    ],
    "presets": [{
      "name": "Custom HTML",
      "category": "Text"
    }]
  }
{% endschema %}

