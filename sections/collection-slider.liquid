  $('.slider{{ section.id }}').slick({
    slidesToShow: 4,
    prevArrow: $('.prev{{ section.id }}'),
    nextArrow: $('.next{{ section.id }}'),
    dots: true,
    autoplay: false,
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 4
        }
      },
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 2
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 2
        }
      }
      // You can unslick at a given breakpoint now by adding:
      // settings: "unslick"
      // instead of a settings object
    ]
  });



})

</script>
