{% schema %}
  {
    "name": "Dr Woof Hero",
    "max_blocks": 10,
    "settings": [
      {
        "type": "text",
        "id": "pad",
        "label": "outside space",
        "default": "30px"
      },
      {
            "type": "checkbox",
            "id": "enable_auto",
            "label": "Enable autosize",
            "default": false
      },
      {
        "type": "range",
        "id": "desktop_positioning",
        "min": -100,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Text and Button positioning on desktop",
        "default": 0
      },
      {
        "type": "range",
        "id": "height",
        "min": 1,
        "max": 101,
        "step": 1,
        "label": "Height",
        "default": 90
      },
      {
        "type": "range",
        "id": "mobile_height",
        "min": 1,
        "max": 101,
        "step": 1,
        "label": "Mobile height",
        "default": 50
      }, {
        "type": "image_picker",
        "id": "image_lib_pc",
        "label": "Image on PC 1440 x 900 recommend"
      }, {
        "type": "text",
        "id": "image_webp_pc",
        "label": "Image on PC base64 1440 x 900 recommend"
      }, {
        "type": "image_picker",
        "id": "image_lib_mobile",
        "label": "Image on mobile 400 x 300 recommend"
      }, {
        "type": "text",
        "id": "image_webp_mobile",
        "label": "Image on PC base64 400 x 300 recommend"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Hero text",
        "settings": [
          {
            "type": "richtext",
            "id": "text_content",
            "label": "Main text content"
          },
          {
            "type": "checkbox",
            "id": "shadow_enable",
            "label": "Enable Text Shadow",
            "default": true
          },
          {
            "type": "color",
            "id": "shadow_color",
            "label": "Shadow color",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "text_color",
            "label": "Main text color for desktop",
            "default": "#f1f1f1"
          }, {
            "type": "color",
            "id": "text_color2",
            "label": "Main text color for mobile",
            "default": "#f1f1f1"
          }, {
            "type": "range",
            "id": "font_size",
            "min": 12,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Font size",
            "default": 26
          }, {
            "type": "range",
            "id": "font_size_m",
            "min": 12,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Font size on mobile",
            "default": 20
          }
        ]
      }, {
        "type": "button",
        "name": "Button",
        "settings": [
          {
            "type": "text",
            "id": "text_content",
            "label": "Main text button",
            "default": "Shop ..."
          }, {
            "type": "text",
            "id": "link",
            "label": "link",
            "default": "#"
          }, {
            "type": "radio",
            "id": "float",
            "label": "Floating",
            "options": [
              {
                "value": "left",
                "label": "Left"
              }, {
                "value": "right",
                "label": "Right"
              }

            ],

            "default": "right"

          }
        ]
      }, {
        "type": "review",
        "name": "Reviews",
        "settings": [
          {
            "type": "textarea",
            "id": "text_content",
            "label": "Main text content",
            "default": "Trusted by 5000+ Doctors"
          }, {
            "type": "color",
            "id": "text_color",
            "label": "Main text color",
            "default": "#ffffff"
          }, {
            "type": "color",
            "id": "background_color",
            "label": "Background color",
            "default": "#000000"
          }, {
            "type": "radio",
            "id": "hide",
            "label": "Hide on PC",
            "options": [
              {
                "value": "true",
                "label": "True"
              }, {
                "value": "false",
                "label": "False"
              }

            ],

            "default": "true"

          }

        ]
      }
    ],
    "presets": [
      {
        "name": "Dr Woof Hero",
        "category": "Image",
        "blocks": []
      }
    ]
  }
{% endschema %}