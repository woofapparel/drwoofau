.headerv2 .main_header{
    font-family: futura2;
    font-weight: 400;
    font-size: 64px;
    line-height: 72px;
    margin-bottom: 20px;
    {% if section.settings.light_theme %}
      color:#fff;
  {% endif %}
}
{% if section.settings.added_date %}
.main_header{
  text-align:center;
  font-size:42px;
}
