  .headerv2{
    padding: 30px 0;
  }
  .headerv2-wrapper{
    width:100%;
    padding-left:12px;
    padding-right:12px;
  }
}
@media only screen and (max-width:480px){
  
  .headerimage{
    display:none;
  }
