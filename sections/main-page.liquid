  font-family: futura2;
  src: url({{ 'futura.otf' | asset_url }});
}
.headerimage{
   width:100%;
   height:auto;
   display:block;
}
.mobileimage{
  width:100%;
   height:auto;
  display:none;
  {% if section.settings.added_date %}
    margin-bottom:20px;
  {% endif %}

}
.button-wrapper{
   display:flex;
   flex-wrap:wrap;
   justify-content: space-between;   
}
.button-wrapper a {
    flex: 0 0 48%;
}

.header-button{
    background: #000;
    padding: 12px 0px;
    color:#fff;
    margin-right:12px;
    width:100%;
    {% if section.settings.light_theme %}
