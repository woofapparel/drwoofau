<!-- section/main-page.liquid -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="headerv2">
  {% if section.settings.added_date %}
    {% if section.settings.colored_header %}
      <span class="colored_header">{{ section.settings.colored_header }}</span>
    {% endif %}
    {% if section.settings.main_header %}
      <h1 class="main_header">{{ section.settings.main_header }}</h1>
    {% endif %}
  
  <p style="text-align:center;font-size:14px;margin-bottom:40px;padding:0 12px;opacity: 0.6"><i class="fa-regular fa-clock"></i> 3 minute read. Published <span class="tdate"></span></p>
{% endif %}
    <div class="headerv2-wrapper">
        <div class="duo">
          {% unless section.settings.added_date %}
              {% if section.settings.colored_header %}
                  <span class="colored_header">{{ section.settings.colored_header }}</span>
              {% endif %}
              {% if section.settings.main_header %}
                  <h1 class="main_header">{{ section.settings.main_header }}</h1>
              {% endif %}
            {% endunless %}
            {% if section.settings.content %}
                <p class="content">{{ section.settings.content }}</h1>
            {% endif %}
            <ul class="header-list">
                {% for block in section.blocks %}  
                    <li>   
                      <img src="{% if block. settings.icon_image %}{{ block.settings.icon_image | img_url: 'master' }}{% else %}{{ 'badge1.png' | asset_url }}{% endif %}" class="smallbadge">{{ block.settings.text_list }}
                    </li>                
                {% endfor %}
            </ul>
            <div class="button-wrapper">
              {% unless section.settings.button_text_1 == blank  %}
                <a href="{% if section.settings.button_1_url %}{{ section.settings.button_1_url }}{% else %}#{% endif %}"><button class="header-button">{{ section.settings.button_text_1 }}</button></a>
                {% endunless %}
              {% unless section.settings.button_text_2  == blank %}
                <a href="{% if section.settings.button_2_url %}{{ section.settings.button_2_url }}{% else %}#{% endif %}"><button class="header-button">{{ section.settings.button_text_2 }}</button></a>
                {% endunless %}
            </div>
            
        </div>
        <div class="duo">
            <img src="{{ section.settings.header_image | img_url: 'master' }}" class="headerimage">
            <img src="{{ section.settings.mobile_image | img_url: 'master' }}" class="mobileimage">
        </div>
    </div>    
</div>
    
<style>
