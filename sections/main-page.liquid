  padding:80px 0px;
  background-color: {{ section.settings.bg_color }};
  max-width:1300px;
  margin-left:auto;
  margin-right:auto;
}
.smallbadge{
  display:inline-block;
  width:28px;
  height:28px;
  margin-right:12px;
}
.header-list{
  padding:0;
  margin:0 !important;
  margin-left:0;
  margin-bottom:32px !important;
  {% if section.settings.light_theme %}
