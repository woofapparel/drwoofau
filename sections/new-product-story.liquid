          <style>
            .product-story{
                width:100%;
                background:#0B0D32;
                padding-top:80px;
                padding-bottom:80px;
                margin-top:40px;
                margin-bottom:80px;
            }
            .ps-wrapper {
              max-width:1300px;
              margin-left:auto;
              margin-right:auto;
              width:100%;
            }
            .product-story .prices{
              font-family: Oxygen;
              font-size:18px;
  
            }
            .product-story .sectit{
              font-family: 'Futurapt';
              font-size:40px;
              margin-bottom:24px;
              color:#fff;
            }
            .product-story .flexer{
              display:flex;
              justify-content:space-between;
              flex-wrap:wrap;
            }
            .product-story .quad{
              flex:-0 0 24%;
            }
            .product-story .quad img{
              
            }
            .product-story .product-story-title{
              font-size:18px;
              margin-bottom:10px;
              font-weight:500;
              color:#fff !important;
            }
            .product-story .quad .fullimage{
              width:50%;
              margin-bottom:10px;
            }
            .product-story-image{
              border-radius:8px;
              width:100%;
              margin-bottom:10px;
            }
            .product-story .price{
              font-size:18px;
              font-family: oxygen;
            }
            
            @media only screen and (max-width:480px){
              
                .product-story .quad{
                  flex:-0 0 100%;
                  margin-bottom:32px;
                }
                .product-story .sectit{
                  font-size:32px;
                }
                .product-story{
                  padding-left:16px;
                  padding-right:16px;
                  padding-top:40px;
                  padding-bottom:40px;
                  margin-bottom:20px;
                }
            }
          </style>
